#	Convert all c files to object files
require 'fileutils'
require 'rake/clean'
require 'rake/testtask'

CLEAN.add('**/*.o');
CLEAN.add('test/*.exe');
CLEAN.add('src/*.exe');

def gccBuild(execName, objectFiles)
	puts "Running gcc -o #{execName} #{objectFiles.join(' ')} -Wall -Wextra"
	print `gcc -g -o #{execName} #{objectFiles.join(' ')} -Wall -Wextra`
end

rule '.o' => ['.c'] do |t|
  print `gcc -g -c -o #{t.name} #{t.source}`
end

