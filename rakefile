#	Convert all c files to object files
require 'fileutils'
require 'rake/clean'
require 'rake/testtask'

CLEAN.add('**/*.o');
CLEAN.add('test/*.exe');
CLEAN.add('src/*.exe');

def gccBuild(execName, objectFiles)
	print `gcc -o #{execName} #{objectFiles.join(' ')} -Wall -Wextra`
end

rule '.o' => ['.c'] do |t|
  print `gcc -c -o #{t.name} #{t.source}`
end

